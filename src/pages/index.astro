---
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";

const inviteBotUrl = import.meta.env.PUBLIC_INVITE_BOT_URL;
---

<Layout title="Vilbot - The awesome Discord Music Bot for your server!">
  <section class="container mx-auto px-4 py-48 text-center m-auto">
    <h1 class="text-6xl md:text-7xl lg:text-9xl font-bold mb-4 text-[#fe83e8]">
      Vilbot
    </h1>
    <div class="space-y-4 mb-8">
      <p class="text-gray-300 text-xl inline-block px-4 py-2">
        The awesome Discord Music Bot for your server!
      </p>
    </div>
    <div class="flex justify-center gap-4">
      <Button as="a" color="fuchsia" href={inviteBotUrl}>
        Invite Vilbot
        <svg
          viewBox="0 0 20 20"
          fill="none"
          aria-hidden="true"
          class="mt-0.5 h-5 w-5 -mr-1 transition-all duration-300 group-hover:translate-x-1"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m11.5 6.5 3 3.5m0 0-3 3.5m3-3.5h-9"
          >
          </path>
        </svg>
      </Button>
      <Button as="a" color="zinc" href="#"> Join to Discord </Button>
    </div>
  </section>
</Layout>
