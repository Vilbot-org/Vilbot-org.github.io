---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  color: keyof typeof colorClasses;
}>;

const { as: Element, color, class: className, ...props } = Astro.props;

const colorClasses = {
  fuchsia:
    "text-fuchsia-400 bg-fuchsia-400/10 ring-fuchsia-400/20 hover:ring-fuchsia-400",
  zinc: "text-zinc-400 ring-white/10 hover:text-white hover:bg-white/5",
};

const classes = [
  "group flex items-center justify-center gap-2 text-lg w-fit ring-1 ring-inset transition duration-300 rounded-full py-1 px-4",
  colorClasses[color as keyof typeof colorClasses],
  className,
];
---

<Element class:list={classes} {...props}>
  <slot />
</Element>
